{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib": ["./src/lib/*"],
      "@/components": ["./src/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/api/currency.js",
    "src/pages/docs/markdown-render.js",
    "src/pages/docs/scraping.js",
    "src/pages/docs/google-sheets.js",
    "src/components/JavascriptExample.js",
    "src/components/Scraping.js",
    "src/components/ArticleComponent.js",
    "src/components/NavSwicth.js",
    "src/components/utils/WeatherAPI.tsxPI.tsx",
    ".next/types/**/*.ts",
    "src/pages/docs/comments.ts",
    "src/components/utils/tracker.js",
    "src/components/WeatherCard.js",
    "src/pages/api/badge-counter.js"
  ],
  "exclude": ["node_modules"]
}
